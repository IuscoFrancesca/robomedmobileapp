<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#DCDCDC"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:minWidth="100px"
        android:minHeight="1100px"
        android:layout_width="fill_parent"
        android:layout_height="564.0dp"
        android:id="@+id/linearLayout1"
        android:layout_marginTop="0.0dp">
        <ImageView
            android:src="@drawable/logorobo1"
            android:layout_marginTop="100px"
            android:layout_marginBottom="10px"
            android:layout_width="312px"
            android:layout_height="312px"
            android:id="@+id/imageView1" />
        <TextView
            android:text="Control prin teleghidare"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="-30px"
            android:layout_marginBottom="50px"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView1" />


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="10dp"></LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="76dp">

            <Button
                android:text="Fata"
                android:layout_width="175dp"
                android:layout_height="73dp"
                android:layout_marginLeft="100dp"
                android:id="@+id/btnFata" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="76dp">
            <Button
                android:text="Stanga"
                android:layout_width="150dp"
                android:layout_height="73dp"
                android:id="@+id/btnStanga" />

            <Button
                android:text="Dreapta"
                android:layout_width="150dp"
                android:layout_marginLeft="85dp"
                android:layout_height="73dp"
                android:id="@+id/btnDreapta" />

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="76dp">

            <Button
                android:text="Spate"
                 android:layout_marginLeft="100dp"
                android:layout_width="175dp"
                android:layout_height="73dp"
                android:id="@+id/btnSpate" />
        </LinearLayout>
         

      

    </LinearLayout>
</RelativeLayout>