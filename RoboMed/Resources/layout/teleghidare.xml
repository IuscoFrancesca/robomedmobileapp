<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#DCDCDC"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:minWidth="100px"
        android:minHeight="1100px"
        android:layout_width="fill_parent"
        android:layout_height="564.0dp"
        android:id="@+id/linearLayout1"
        android:layout_marginTop="0.0dp">
        <ImageView
            android:src="@drawable/logorobo1"
            android:layout_marginTop="-300px"
            android:layout_marginBottom="10px"
            android:layout_width="312px"
            android:layout_height="312px"
            android:id="@+id/imageView1" />
        <TextView
            android:text="Control prin teleghidare"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="-30px"
            android:layout_marginBottom="50px"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView1" />
        <Button
            android:text=""
            android:layout_width="100px"
            android:layout_marginTop="20dp"
            android:layout_height="100px"
            android:background="#00FA9A"
            android:layout_toLeftOf="@id/linearLayout1"
            android:id="@+id/btnFata"
            android:autoLink="none"/>
        <Button
            android:text=""
            android:layout_width="100px"
            android:layout_marginTop="20dp"
            android:layout_marginRight="-100dp"
            android:layout_height="100px"
            android:background="#00FA9A"
            android:layout_toLeftOf="@id/linearLayout1"
            android:id="@+id/btnStanga"
            android:autoLink="none"
            android:layout_marginBottom="0.0dp" />
        <Button
            android:text=""
            android:layout_width="100px"
            android:layout_marginTop="20dp"
            android:layout_marginRight="100dp"
            android:layout_height="100px"
            android:background="#00FA9A"
            android:layout_toLeftOf="@id/linearLayout1"
            android:id="@+id/btnDreapta"
            android:autoLink="none"
            android:layout_marginLeft="22.0dp" />
        <Button
            android:text=""
            android:layout_width="100px"
            android:layout_marginTop="20dp"
            android:layout_height="100px"
            android:background="#00FA9A"
            android:layout_toLeftOf="@id/linearLayout1"
            android:id="@+id/btnSpate"
            android:autoLink="none"/>
        



    </LinearLayout>
</RelativeLayout>